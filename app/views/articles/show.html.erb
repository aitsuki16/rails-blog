<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to 'Edit', edit_article_path(@article) %></li>
  <li>
    <%= form_with url: article_path(@article), method: :delete, class: "delete-form", local: true do %>
      <button type="submit" onclick="return confirm('Are you sure you want to delete this article?')">Destroy</button>
    <% end %>
  </li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form", article: @article %>